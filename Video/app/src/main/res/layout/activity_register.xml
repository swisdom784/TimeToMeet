<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DB6D1"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/titleBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="TODO"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/logo01" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bagel_fat_one_regular"
            android:gravity="center_vertical"
            android:shadowColor="#507587B2"
            android:shadowRadius="20"
            android:text="Sign Up"
            android:textColor="#F4F6FA"
            android:textSize="60sp"
            android:textStyle="normal" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBox"
        android:background="@drawable/background_a"
        android:backgroundTint="#70F4F6FA"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="90dp">

        <LinearLayout
            android:id="@+id/box1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더 많은 서비스를 즐겨보세요 !"
                android:fontFamily="@font/mainfont01"
                android:textColor="#7587B2"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/box2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/box1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:fontFamily="@font/mainfont01"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 이메일"
                android:textColor="#425276"
                android:textSize="27sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"/>

            <EditText
                android:id="@+id/username"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:hint="  이메일을 입력하세요"
                android:fontFamily="@font/mainfont01"
                android:textColorHint="@color/white_90"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/pwcheckText2"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일 형식에 맞게 입력해주세요."
                android:fontFamily=""
                android:textColor="#f54242"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/box3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/box2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:fontFamily="@font/mainfont01"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 비밀번호"
                android:textColor="#425276"
                android:textSize="27sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_baseline_info_24"/>

            <EditText
                android:id="@+id/password"
                android:layout_marginHorizontal="20dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:hint="  비밀번호를 입력하세요"
                android:fontFamily="@font/mainfont01"
                android:textColorHint="@color/white_90"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/pwcheckText"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호는 6자리 이상 입력해주세요."
                android:textColor="#f54242"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/box4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/box3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:fontFamily="@font/mainfont01"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 닉네임"
                android:drawableLeft="@drawable/ic_baseline_info_24"
                android:textColor="#425276"
                android:textSize="27sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:hint="닉네임을 입력하세요"
                android:fontFamily="@font/mainfont01"
                android:textColorHint="@color/white_90"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/pwcheckText3"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#f54242"
                android:paddingStart="5dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:text="가입하기"
            android:fontFamily="@font/mainfont01"
            android:textSize="28sp"
            android:textStyle="bold"
            android:backgroundTint="#425276"
            app:layout_constraintTop_toBottomOf="@+id/box4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 페이지로 돌아가기"
        android:fontFamily="@font/mainfont01"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="45dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>