<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DB6D1"
    android:orientation="vertical"
    tools:context=".EntranceActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainBox"
        app:layout_constraintEnd_toStartOf="@id/textView"
        app:srcCompat="@drawable/logo01"
        android:contentDescription="TODO" />

    <TextView
        android:layout_marginStart="90dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bagel_fat_one_regular"
        android:gravity="center"
        android:text="Enter Room"
        android:textColor="#F4F6FA"
        android:textSize="50sp"
        android:textStyle="normal"
        android:shadowColor="#507587B2"
        android:shadowRadius="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainBox"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_a"
        android:backgroundTint="#70F4F6FA"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp">

        <TextView
            android:id="@+id/mainTxt"
            android:fontFamily="@font/mainfont01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    입장하실 방의\n비밀번호를 입력하세요"
            android:textColor="#7587B2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/mainBox"
            app:layout_constraintStart_toStartOf="@+id/mainBox"
            app:layout_constraintTop_toTopOf="@+id/mainBox"
            android:layout_marginTop="50dp"/>



        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/round"
            android:backgroundTint="#50425276"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#F4F6FA"
            android:textColorHint="#F4F6FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainTxt"
            app:layout_constraintBottom_toTopOf="@id/entbtn"
            android:layout_marginTop="30dp"

            />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/entbtn"

            android:backgroundTint="#F2E9CAEB"
            android:layout_marginStart="10dp"
            android:textSize="25dp"
            android:text="Enter Room"
            android:fontFamily="@font/nanum_pen_script_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈 화면으로 돌아가기"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>