<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DB6D1"
    tools:context=".MakeRoomActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bagel_fat_one_regular"
        android:gravity="center"
        android:text="Make Room"
        android:textColor="#F4F6FA"
        android:textSize="60sp"
        android:textStyle="normal"
        android:shadowColor="#507587B2"
        android:shadowRadius="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/room"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        android:background="@drawable/round"
        android:backgroundTint="#70F4F6FA"
        android:padding="7dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:hint="  방 이름 입력"/>

    <Button
        android:id="@+id/makebtn"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="#425276"
        android:fontFamily="@font/mainfont01"
        android:text="DONE"
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/makebtn"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/start_datepicker_btn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:backgroundTint="#425276"
            app:layout_constraintTop_toBottomOf="@+id/makebtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Start Date"
            android:clickable="true"
            android:onClick="clickstartdateBtn"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/end_datepicker_btn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:backgroundTint="#425276"
            app:layout_constraintTop_toBottomOf="@+id/start_datepicker_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="End Date"
            android:clickable="true"
            android:onClick="clickenddateBtn"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/timepicker_btn1"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:backgroundTint="#425276"
            app:layout_constraintTop_toBottomOf="@+id/end_datepicker_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Start Time"
            android:clickable="true"
            android:onClick="clicktimeBtn1"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/timepicker_btn2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:backgroundTint="#425276"
            app:layout_constraintTop_toBottomOf="@+id/timepicker_btn1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="End Time"
            android:clickable="true"
            android:onClick="clicktimeBtn2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/datetext_btn1"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="date"/>
        <TextView
            android:id="@+id/datetext_btn2"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="date"/>
        <TextView
            android:id="@+id/timetext_btn1"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="start time"/>
        <TextView
            android:id="@+id/timetext_btn2"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="end time"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>