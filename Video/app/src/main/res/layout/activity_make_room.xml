<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeRoomActivity">

    <EditText
        android:id="@+id/room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="방 이름 입력"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/room"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="비밀번호"/>

    <Button
        android:id="@+id/makebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room"
        app:layout_constraintRight_toRightOf="parent"
        android:text="방 생성"/>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/datepicker_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick the Date"
            android:clickable="true"
            android:onClick="clickdateBtn"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/timepicker_btn1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:clickable="true"
            android:onClick="clicktimeBtn1"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/timepicker_btn2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:clickable="true"
            android:onClick="clicktimeBtn2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/datetext_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="date"/>
        <TextView
            android:id="@+id/timetext_btn1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="start time"/>
        <TextView
            android:id="@+id/timetext_btn2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="end time"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>