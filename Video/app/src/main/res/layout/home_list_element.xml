<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">
        <ImageView
            android:padding="7dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/logoImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/logo01"/>
        <TextView
            android:id="@+id/roomNumber"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:layout_marginLeft="7sp"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:text="PrintRoom"
            android:textColor="@color/colorSlateGray"
            android:fontFamily="@font/mainfont01"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/peopleImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/person_24px" />
        <TextView
            android:id="@+id/roomPeople"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:layout_marginLeft="5sp"
            android:textSize="20sp"
            android:text="10"
            android:textColor="@color/colorSlateGray"
            android:fontFamily="@font/mainfont01"
            android:layout_gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>