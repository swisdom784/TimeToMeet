<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAliceBlue"
    tools:context=".RoomShowActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Room Name"
        android:textColor="@color/colorYlnMnBlue"
        android:fontFamily="@font/bagel_fat_one_regular"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="password"
        android:fontFamily="@font/mainfont01"
        android:textIsSelectable="true"
        android:textSize="30sp"/>

    <!-- room에 들어가 있는 사람의 리스트 -->
    <ListView
        android:id="@+id/personList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp" >
    </ListView>

    <!-- room의 시간 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/day_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/everytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="time"
                        android:textSize="24sp"
                        android:fontFamily="@font/bagel_fat_one_regular"
                        android:textColor="@color/colorYlnMnBlue"/>
                    <LinearLayout
                        android:id="@+id/my_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>

    <!-- button -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.widget.Button
            android:id="@+id/memoListBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="팀 메모"
            android:textSize="20sp"
            android:fontFamily="@font/mainfont01"
            android:textColor="@color/white"
            android:background="@drawable/round"
            android:backgroundTint="@color/colorWisteria"/>

        <android.widget.Button
            android:id="@+id/select"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="개인 선택"
            android:textSize="20sp"
            android:fontFamily="@font/mainfont01"
            android:textColor="@color/white"
            android:background="@drawable/round"
            android:backgroundTint="@color/colorWisteria"/>

    </LinearLayout>

</LinearLayout>