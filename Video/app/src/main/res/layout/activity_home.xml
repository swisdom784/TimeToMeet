<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DB6D1"
    android:padding="20dp"
    android:weightSum="1"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:id="@+id/mainBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bagel_fat_one_regular"
                android:gravity="center_horizontal"
                android:shadowColor="#507587B2"
                android:shadowRadius="20"
                android:text="TIME to MEET"
                android:textColor="#F4F6FA"
                android:textSize="30sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/back_to_home2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F4F6FA"
            android:background="@drawable/round_corner"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mainfont01"
                android:text="사용자"
                android:textColor="#F4F6FA"
                android:textSize="37sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mainfont01"
                android:text=" 님의 약속 리스트"
                android:textColor="#F4F6FA"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/erasebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:paddingHorizontal="23dp"
                android:paddingVertical="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_ripple_effect_white"
                android:backgroundTint="#425276"
                android:fontFamily="@font/mainfont01"
                android:text="삭제"
                android:textColor="#F4F6FA"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/round_corner2"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/roomListOrigin"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/box3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <android.widget.Button
                android:id="@+id/makebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_ripple_effect_white"
                android:backgroundTint="#425276"
                android:fontFamily="@font/mainfont01"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="방 생성하기"
                android:textColor="#F4F6FA"
                android:textSize="20dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <android.widget.Button
                android:id="@+id/entbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/custom_ripple_effect_white"
                android:backgroundTint="#425276"
                android:fontFamily="@font/mainfont01"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="방 입장하기"
                android:textColor="#F4F6FA"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>